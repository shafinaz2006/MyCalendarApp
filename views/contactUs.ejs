
<%- include('partials/header') %>

		
		<div class = 'contactPage'> <!-- Contact Form -->

			<div class = 'contactPageMainDiv'>

				<h3 style= 'text-align: center;'>Please fill out this form</h3>

				<form action='/contact' , method='POST'>

					<div class='form-group' style='margin-top: 10px;'>
						<label class = 'required'>Name: </label>
						<input class='form-control' type='text' name='contact[contactName]' 
							   placeholder='name' required>
					</div>

					<div class='form-group'>
						<label class = 'required'>Email: </label>
						<input class='form-control' type='email' name='contact[email]' placeholder='email'
							   required>
					</div>
					
					<div class='form-group'>
						<label class = 'required'>Message</label>
						<textarea class='form-control' name='contact[message]' placeholder='message' rows='2'
								  required>
						</textarea>
					</div>

					<div class='form-group' style = 'text-align: center;'>
						<button class='btn btnSubmit'> 
							Submit 
						</button>
					</div>
				</form>

			</div>

		</div> <!-- Contact Form END-->
	

	<%- include('partials/footer') %>