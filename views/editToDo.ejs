<%- include('partials/header') %>

	<div class = 'contactPage'>

		<div class = 'contactPageMainDiv'>

			<h2 style = 'text-align: center;'>Edit - <%= foundTodo.title %> </h2>

			<form action="/todo/<%= foundTodo._id %>?_method=PUT", method="POST">

				<div class='form-group'>
					<label>Title</label>
					<input class='form-control' type='text' value= "<%=foundTodo.title%>" name='todo[title]'>
				</div>

				<div class='form-group'>
					<label>Description</label>
					<textarea class='form-control' name='todo[description]' rows='2'><%=foundTodo.description%>
					</textarea>
				</div>
				
				<div id = 'dateDiv'>
					<div class='form-group' id = 'startDateDiv'>
						<label class = 'required'>Start Date: </label>
						<input class='form-control' type='date' name='todo[startDate]' 
							   value = '<%=foundTodo.startDate%>' required>
					</div>

					<div class='form-group'  id = 'endDateDiv'>
						<label class = 'required' id = 'endDateLabel'>End Date: </label>
						<input class='form-control' type='date' name='todo[endDate]' required>
					</div>
				</div>

				<div class='form-group radioStatusClass'>
										
						<label style='padding-right: 1rem;'> Status: </label>
						<div style = "padding-right: 1rem;">
							<input type="radio" name="todo[radioStatus]" id="name" value = 'notStarted'>
							<label for="name">Not Started</label>
						</div>
						<div style = "padding-right: 1rem;">
							<input type="radio" name="todo[radioStatus]" id="name" value = 'inProgress' >
							<label for="name">In Progress</label>
						</div>
						<div>
							<input type="radio" name="todo[radioStatus]" id="name" value = 'completed'>
							<label for="name">Completed</label>
						</div>
					
				</div>

				<div class='form-group' style='text-align: center;'>
					<button class='btn btnSubmit' type = 'submit'> 
						Click to Update 
					</button>
				</div>
			</form>
		</div>

	</div>
	<!-- Create New to do form END -->

	<!-- END of main container -->

	<%- include('partials/footer') %>